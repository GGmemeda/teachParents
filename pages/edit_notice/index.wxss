/* pages/create_notice/index.wxss */
.main-content{
    display: flex;
    flex-direction: column;
    height: 100%;
    padding-bottom: 88rpx;
}
.top-send{
    position: relative;
    height: 100%;
}
.form-content{
    width: 100%;
    height: 100%;
    padding: 0 32rpx;
    display: flex;
    flex-direction: column;
    overflow: auto;
}
.form-title{
    border-bottom: 1rpx solid #E4E4E4;
    height: 100rpx;
}
.form-inner{
    flex:1 1 auto;
    position: relative;
}

.title-input{
    font-size:32rpx;
    font-family:PingFangSC;
    font-weight:400;
    color:#1A1D1E;
    line-height:100rpx;
    width: 100%;
    height: 100rpx;
}

.textarea-box{
    height: 100%;
    padding: 28rpx 0 60rpx 0;
    font-size:32rpx;
    font-family:PingFangSC;
    font-weight:400;
    color:#1A1D1E;
    line-height:45rpx;
    position: absolute;
    width: 100%;
}
.content-textarea{
    height: 100%;
}
.hasimage-textarea{
    position: inherit;
    height: 472rpx;
}
.textarea-placeholder{
    position: absolute;
    top: 28rpx;
    left: 8rpx;
    color:rgba(26,29,30,.4);
}
.word-sum{
    font-size:28rpx;
    font-family:PingFangSC;
    font-weight:400;
    color:rgba(26,29,30,.4);
    line-height:28rpx;
    position: absolute;
    bottom: 32rpx;

}
.text-active{
    color: #009BFD;
}
.bottom-send{
    position: fixed;
    bottom: 0;
    width: 100%;
    left: 0;
   border-top:1rpx solid rgba(228,228,228,1);
   height: 88rpx;
    padding: 32rpx 32rpx 28rpx 60rpx;
    display: flex;
    justify-content: space-between;
}
.left-choose{
    display: flex;
    align-items: center;
}
.left-choose image{
    width: 40rpx;
    height: 32rpx;
}
.left-choose image+image{
    margin-left: 80rpx;
    width:28rpx;
    height: 38rpx;
}
.send-button{
    font-size:32rpx;
    font-family:PingFangSC;
    font-weight:600;
    color:rgba(26,29,30,.3);
    line-height:32rpx;
}
.send-button_active{
    color:#009BFD;
}
.image-box-item{
    width: 200rpx;
    height: 200rpx;
    position: relative;
    display: inline-block;
    margin-bottom: 32rpx;
}
.image-box-item+.image-box-item{
    margin-left: 38rpx;
}
.image-box-item:nth-child(3n+1){
    margin-left: 0;
}
.image-box-item image{
    width: 100%;
    height: 100%;
}
.imageDelete{
    position: absolute;
    right: 16rpx;
    top: 16rpx;
}
.imageDelete image{
    width: 21rpx;
    height: 21rpx;
}

.listman {
    overflow: hidden;
    padding-bottom: 40rpx;
}

.list {
    display: flex;
    justify-content: space-between;
    margin-top: 40rpx;
    align-items: center;
}

.list .l {
    width: 572rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.list .r {
    margin-left: 8rpx;
    width: 65rpx;
    height:80rpx;
}

.list .r image {
    width: 100%;
    height: 100%;
}

.list  .tit {
    color: rgba(26, 29, 30, 1);
    font-size: 32rpx;
    text-align: justify;
    overflow:hidden;
    text-overflow:ellipsis;
    display:-webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2;
}

.list  .det {
    color: rgba(26, 29, 30, .6);
    font-size: 24rpx;
    text-align: left;
    margin-top: 16rpx;
}
.det text+text{
    margin-left: 15px;
}