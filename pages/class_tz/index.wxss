/* pages/my_info/index.wxss */
.info_content {
  padding: 0 30rpx 135rpx 30rpx;
  height: 100vh;
}
.info-wrapper{
  height: 100%;
  overflow: auto;
}
.info_list {
  background-color: #ffffff;
  padding: 0 32rpx;
  border-radius: 12rpx;
  position: relative;
  margin-top: 30rpx;
  box-shadow: 0 0 24rpx 5rpx #DCDDDE;
}

.il_center {
  overflow: hidden;
}

.il_center view:nth-child(1) {
  color: rgba(44, 50, 65, .6);
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.il_center view:nth-child(1) text:nth-child(1) {
  color: rgba(51, 57, 71, 1);
  font-size: 36rpx;
  font-weight: bold;
  margin-right: 32rpx;
}

.il_center view:nth-child(1) text:nth-child(3) {
  display: inline-block;
  width: 1rpx;
  height: 20rpx;
  background-color: #979797;
  margin: 0 10rpx;
}

.closeaaa {
  width: 24rpx;
  position: absolute;
  right: 32rpx;
  top: 32rpx;
}

.binding {
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  padding: 20rpx 0;

}

.binding text:first-child {
  display: inline-block;
  font-size: 60rpx;
  font-weight: 300;
  vertical-align: top;
  position: relative;
  top: -8rpx;
  margin-right: 8rpx;
}

.angular {
  box-shadow: 0 10rpx 10rpx 3rpx rgba(0, 155, 253, .2);
}

.tp1 {
  display: flex;
  justify-content: space-between;
  margin-top: 32rpx;
}

.border-b-s {
  padding-bottom: 4rpx;
}

.tp3 {
  display: flex;
  align-items: center;
  height: 92rpx;
}

.tp3 > .to {
  width: 26rpx;
}

.hd {
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: rgba(253, 24, 0, 1);
  margin-right: 30rpx;
}

.tp3cen {
  flex: 1;
  text-align: right;
}

.tp2 {
  color: rgba(44, 50, 65, 1);
  font-size: 28rpx;
  text-align: justify;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-top: 25rpx;
  margin-bottom: 28rpx;
}
.left-unread{
  font-size:28rpx;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(25,164,253,1) !important;
  line-height:28rpx;
}
.withdrawn{
  background:rgba(255,255,255,1)!important;
}
.withdrawn  .tp1 text{
  color:rgba(51,57,71,.4) !important;
}
.withdrawn .tp2{
  color:rgba(44,50,65,.4)!important;
}
.withdrawn .left-unread{
  color:rgba(26,29,30,.4) !important;
}

.bottom-button{
  position: fixed;
  bottom: 0rpx;
  left:0;
  padding: 0 40px 20rpx 40rpx;
}
.title{
  font-size: 36rpx;
}