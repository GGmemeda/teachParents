<!--pages/classroom/index.wxml-->
<view class="classroom" wx:if="{{isLogin}}">
  <view>
    <image class="banner" mode="widthFix" src="/images/classroom/banner.png"></image>
  </view>
  <view class="t2">
    <view class="t2c">
      <view class="tc1">
        <view class="t1content border-b">
          <view class="l1">
            <text>{{array[selectIndex]}}-{{classGradeArray[selectIndex]['subjectName']}}</text>
            <view class="jsdjf">
              <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
                <!-- <view class="picker">
                  当前选择：{{array[index]}}
                </view> -->
                <image mode="widthFix" src="/images/classroom/gengduo.png"></image>
              </picker>
            </view>
          </view>
          <view class="l2">
            {{classGradeArray[selectIndex]['schoolName']}}
          </view>
        </view>
        <view class="t2con">
          <view class="l a"><image mode="widthFix" src="/images/classroom/cls.png"></image>课堂学生</view>
          <view class="r a">{{classGradeArray[selectIndex]['count']}}人<image mode="widthFix" src="/images/icon/to.png"></image></view>
        </view>
      </view>
      <view class="tc2"> 
        <view class="tct border-b">课堂管理</view>
        <view class="ktcontent">
          <view class="lis border-r" data-name="notice" bindtap="toPage" >
            <image mode="widthFix" class="tzroom" src="/images/classroom/tz.png" ></image>
            <view class="mz">通知</view>
          </view>
          <view class="lis border-r">
            <image mode="widthFix" class="tzroom" src="/images/classroom/zy.png"></image>
            <view class="mz">作业</view>
          </view>
          <view class="lis" data-name="results" bindtap="toPage">
            <image mode="widthFix" class="tzroom" src="/images/classroom/cj.png"></image>
            <view class="mz">成绩</view>
          </view>
          <view class="lis border-t border-r" data-name="class_photo" bindtap="toPage">
            <image mode="widthFix" class="tzroom" src="/images/classroom/xc.png"></image>
            <view class="mz">相册</view>
          </view>
          <view class="lis border-t border-r" data-name="file_upload" bindtap="toPage">
            <image mode="widthFix" class="tzroom" src="/images/classroom/wj.png"></image>
            <view class="mz">文件</view>
          </view>
          <view class="lis border-t"></view>
        </view>
      </view>
    </view>
  </view>
</view>
<!-- 课堂管理弹出框 -->
