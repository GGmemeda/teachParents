/* pages/phone_login/index.wxss */
.circle-logo{
    text-align: center;
    margin: 100rpx 0 30rpx 0;
}
.circle-logo image{
    width:120rpx;
    height:120rpx;
}
.logo-words{
    font-size:32rpx;
    font-family:PingFangSC;
    font-weight:400;
    color:rgba(44,47,48,1);
    line-height:28rpx;
    text-align: center;
    margin-bottom: 120rpx;
}
.section{
    width:590rpx;
    height:88rpx;
    background:rgba(250,250,250,1);
    border-radius:8rpx;
    border:1px solid rgba(228,228,228,1);
    display: flex;
    align-items: center;
    margin: auto;
}
.section+.section{
    margin-top: 40rpx;
}
.section input{
    display: block;
    font-size: 32rpx;
    height:88rpx;
    line-height: 88rpx;

}
.form-img{
    width:28rpx;
    height:32rpx;
    margin: 0 32rpx;
}
.code-button{
    width:223rpx;
    height:88rpx;
    font-size:32rpx;
    font-family:PingFangSC;
    font-weight:400;
    color:rgba(0,155,253,1);
    line-height:88rpx;
    position: relative;
    text-align: center;
}
.code-button:before{
    content:'';
    position: absolute;
    left: 0;
    top: 30rpx;
    height:32rpx;
    background:rgba(250,250,250,1);
    border-radius:8px;
    border-right:1px solid rgba(228,228,228,1);
}
.btn-area{
    margin-top: 60rpx;
}
.btn-area button{
    width:590rpx;
}
.unactive {
    background:rgba(0,155,253,0.6);
}