/* pages/class_photo/index.wxss */
.av {
  width: 78rpx;
  height: 78rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.il {
  width: 174rpx;
  height: 174rpx;
  vertical-align: top;
  margin-top: 9rpx;
}

.content {
  background-color: #fff;
  padding: 32rpx;
}

.li {
  display: flex;
  margin-bottom: 30rpx;
}


.li > .r {
  flex: 1;
}

.name {
  color: rgba(51, 57, 71, 1);
  font-size: 32rpx;
}

.clb {
  color: rgba(51, 57, 71, 1);
  font-size: 28rpx;
  text-align: justify;
  margin: 24rpx 0;
  line-height: 40rpx;
    overflow:hidden;
    text-overflow:ellipsis;
    display:-webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2;
}

.imglist {
  margin-top: 14rpx;
  overflow: hidden;
}

.imglist > .il {
  margin-right: 9rpx;
  float: left;
}

.imglist > .il:nth-child(3n) {
  margin-right: 0;
}

.il > .ils {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.fabu {
  color: rgba(51, 57, 71, .6);
  font-size: 24rpx;
  padding-top: 16rpx;
}

.uploadImg {
  width: 120rpx;
  height: 120rpx;
  position: fixed;
  right: 32rpx;
  bottom: 32rpx;
  background-color: #009BFD;
  border-radius: 50%;
  text-align: center;
  line-height: 88rpx;
  color: #fff;
}
.l{
  display: flex;
}
.li{
  display: flex;
  flex-direction: column;
  margin-bottom: 41rpx;
}
.uploadImg image{
  width: 120rpx;
  height: 120rpx;
}