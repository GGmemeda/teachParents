/* pages/class_tz_det/index.wxss */
.view-part{
  padding-bottom: 88rpx;
}
.t1 {
  display: flex;
  padding: 40rpx 32rpx;
  background-color: #fff;
  justify-content: flex-start;
}

.t1 .l image{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.t1 .r {
  display: flex;
  padding: 6rpx 20rpx;
  flex-direction: column;
  justify-content: space-between;
}

.t1 .r .n {
  color: rgba(29, 32, 33, 1);
  font-size: 32rpx;
}

.t1 .r .t {
  color: rgba(72, 74, 75, 1);
  font-size: 28rpx;
}

.content {
  background-color: #fff;
  padding: 0 32rpx;
}

.content .textarea {
  color: rgba(26, 29, 30, 1);
  font-size: 28rpx;
  text-align: justify;
}

.cimg {
  width: 32%;
  margin-top: 30rpx;
}
.cimg +.cimg{
  margin-left: 11rpx;
}

.cimgcontent .cimg:nth-child(3n){
  margin-right: 0;
}

.file {
  background-color: rgba(250, 250, 250, 1);
  padding: 0 40rpx;
  padding-top: 32rpx;
}

.file .li {
  display: flex;
  height: 160rpx;
  align-items: center;
}

.li .lr {
  width: 65rpx;
  height: 80rpx;
  margin-right: 36rpx;
}

.li .rl {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.tx1 {
  color: rgba(26, 29, 30, 1);
  font-size: 28rpx;
}

.tx2 {
  color: rgba(72, 74, 75, .6);
  font-size: 24rpx;
  margin-top: 16rpx;
}
.tx2 text{
  margin-right: 32rpx;
}
.bottom-button{
  position: fixed;
  bottom: 0;
  width: 100%;
  height:100rpx;
  background:rgba(255,255,255,1);
  font-size:28rpx;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(0,155,253,1);
  line-height:40rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bottom-button image{
  width:32rpx;
  height: 26rpx;
  margin-right: 8rpx;
}
.content{
  padding-top: 32rpx;
}
.textarea{
  font-size:28rpx;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(26,29,30,1);
  line-height:40rpx;
}
.edit-bottom{
  display: flex;
}
.edit-bottom view{
  flex: auto;
  text-align: center;
  font-size:28rpx;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(0,155,253,1);
  line-height:40rpx
}
.edit-bottom button image{
  width:32rpx;
  height:31rpxs;
  margin-right: 16rpx;
}
.show-line{
  position: relative;
}
.show-line:after{
  content:'';
  position: absolute;
  right: 0;
  width:1rpx;
  height:60rpx;
  top: -5rpx;
  border-right: 1rpx solid #E4E4E4;
}