/* pages/homework_list/index.wxss */
.wrapper-page{
    height: 100vh;
    overflow: hidden;
    padding-bottom: 134rpx;
}
.all-list{
    padding: 0 27rpx;
    height: 100%;
    overflow: auto;
}
.wrapper-page{
    min-height: 100vh;
    background: #fff
}
.list{
    padding-top: 40rpx;
}
.list-time{
    font-size:28rpx;
    font-family:PingFangSC-Regular,PingFangSC;
    font-weight:400;
    color:rgba(51,57,71,1);
    line-height:28rpx;
}
.list-title{
    font-size:32rpx;
    font-family:PingFangSC-Regular,PingFangSC;
    font-weight:400;
    color:rgba(26,29,30,1);
    line-height:32rpx;
    margin: 56rpx 0 20rpx 0;
}
.list-content{
    font-size:28rpx;
    font-family:PingFangSC-Regular,PingFangSC;
    font-weight:400;
    color:rgba(26,29,30,1);
    line-height:40rpx;
    width: 100%;
}
.list-image{
    margin-top: 20rpx;
}
.list-image image{
    width:224rpx;
    height:291rpx;
    border-radius:4rpx;
}
.list-image image+image{
    margin-left: 7rpx;
}
.list-bottom{
    margin: 32rpx 0;
    display: flex;
    justify-content: space-between;
}
.left-part{
    width:200rpx;
    height:56rpx;
    background:rgba(0,155,253,.1);
    border-radius:43rpx;
    text-align: center;
    font-size:28rpx;
    font-family:PingFangSC-Regular,PingFangSC;
    font-weight:400;
    color:rgba(0,155,253,1);
    display: flex;
    justify-content: center;
    align-items: center;
}
.left-part image{
    width:12rpx;
    height:22rpx;
    margin-left: 16rpx;
}
.operate-button{
    width:64rpx;
    height:64rpx;
    background:rgba(245,245,245,1);
    border-radius:43rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.operate-button image{
    width: 22rpx;
    height: 22rpx;
}
.right-part{
    display: flex;
}
.right-part view{
    display: flex;
}
.right-part .operate-button+.operate-button{
    margin-left: 60rpx;
}
.bottom-button{
    position: fixed;
    bottom: 22rpx;
    left: 40rpx;
    right: 40rpx;
}