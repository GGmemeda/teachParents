/* pages/notice_detail/index.wxss */
.content{
    padding: 32rpx 30rpx 0 30rpx;
    background: #fff;
}
.des-content{
    font-size:28rpx;
    font-family:PingFangSC;
    font-weight:400;
    color:rgba(26,29,30,1);
    line-height:40rpx
}

.listman {
    overflow: hidden;
    padding-bottom: 40rpx;
}

.list {
    display: flex;
    justify-content: space-between;
    margin-top: 40rpx;
    align-items: center;
}

.list .l {
    width: 572rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.list .r {
    margin-left: 8rpx;
    width: 65rpx;
    height:80rpx;
}

.list .r image {
    width: 100%;
    height: 100%;
}

.list  .tit {
    color: rgba(26, 29, 30, 1);
    font-size: 32rpx;
    text-align: justify;
    overflow:hidden;
    text-overflow:ellipsis;
    display:-webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2;
}

.list  .det {
    color: rgba(26, 29, 30, .6);
    font-size: 24rpx;
    text-align: left;
    margin-top: 16rpx;
}
.det text+text{
    margin-left: 15px;
}
.image-part{
    margin: 30rpx  0 40rpx 0;
}
.image-part image{
    width: 200rpx;
    height: 300rpx;
}